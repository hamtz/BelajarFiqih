<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background2"
    >



    <LinearLayout
        android:id="@+id/quiz_end_totals_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/quiz_end_correct_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_end_of_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#00C000"
                android:text="@string/quiz_end_header"
                android:textColor="#ffff55"
                android:textSize="@dimen/header_score_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quiz_end_correct_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_end_of_quiz"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="100"
                android:textColor="#ffff55"
                android:textSize="@dimen/score_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quiz_end_incorrect_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:textColor="#059005"
                android:textSize="1dip" />

            <Button
                android:id="@+id/quiz_end_accept_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/quiz_end_correct_number"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/btn_yellow"
                android:text="@string/quiz_end_accept_button"
                android:textColor="#056005"
                android:textSize="@dimen/button_text_size" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>